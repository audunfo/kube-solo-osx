#!/bin/bash
# kube-solo cli

#
app_path=$(cat ~/kube-solo/.env/resouces_path)

#
start() {
    "${app_path}"/up.command
}


stop() {
    "${app_path}"/halt.command
}


status() {
    echo "$(~/bin/corectl q -a k8solo-01)"
}


ip() {
    echo "$(~/bin/corectl q -i k8solo-01)"
}


usage() {
    echo "Usage: ksolo start|stop|status|ip"
}


case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        status)
                status
                ;;
        ip)
                ip
                ;;
        *)
                usage
                ;;
esac
